<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForgeAir.Core.VideoEngine"
             xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Class="ForgeAir.Core.VideoEngine.VideoNowPlayingControl"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Background="Black">
        <ffme:MediaElement x:Name="videoPlayer" LoadedBehavior="Manual" UnloadedBehavior="Manual" IsMuted="False" Stretch="UniformToFill" MediaOpening="videoPlayer_MediaOpening" />
        <Image x:Name="channelLogo" HorizontalAlignment="Right" Height="71" VerticalAlignment="Top" Width="138" Margin="0,27,44,0" Opacity="0.7"/>

        <Canvas x:Name="MarqueeCanvas"
        Margin="0,0,330,0"
        Height="190"
        VerticalAlignment="Top"
        ClipToBounds="True"
        Background="Transparent">

            <TextBlock x:Name="MarqueeText"
               Text="ForgeVision Demo Broadcast (UHF CH39)"
                       HorizontalAlignment="Stretch"
               Foreground="White"
               FontSize="60"
                       FontWeight="Bold"
               FontFamily="Arial"
               Canvas.Top="80"
               TextWrapping="NoWrap" />
        </Canvas>
        <Image x:Name="rating" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="0,27,44,0" Opacity="0.7"/>
        <StackPanel Height="300" VerticalAlignment="Bottom" Opacity="0.8">

            <Wpf:WebView2 Height="300" Width="1920" DefaultBackgroundColor="Transparent" x:Name="nowPlayingOverlay"/>


        </StackPanel>

    </Grid>
</UserControl>
