<UserControl x:Class="ForgeAir.UI.Core.UserControls.CheckComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForgeAir.UI.Core.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ToggleButton x:Name="PART_Toggle"
                      Content="{Binding SelectedSummary, ElementName=root}"
                      IsChecked="{Binding IsOpen, ElementName=PART_Popup, Mode=TwoWay}"
                      Style="{StaticResource MahApps.Styles.ToggleButton.ComboBox}"
                      Padding="4" />

        <Popup x:Name="PART_Popup"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=PART_Toggle}"
               StaysOpen="False"
               AllowsTransparency="True"
               Focusable="False">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="4">
                <ScrollViewer MaxHeight="200">
                    <ItemsControl ItemsSource="{Binding Items, ElementName=root}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Popup>
    </Grid>
</UserControl>
