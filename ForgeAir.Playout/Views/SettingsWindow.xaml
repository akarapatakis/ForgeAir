            <hc:Divider/>

            <TextBlock Text="Tracks" FontSize="18" FontWeight="Regular" TextAlignment="Left"/>
            <hc:ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden" IsInertiaEnabled="True">
                <StackPanel Orientation="Horizontal" Height="110">
                    <Border Name="addTrackBtn" Style="{StaticResource InteractiveBorder}" Width="200" Height="80" Margin="10,10,32,10" CornerRadius="8" MouseLeftButtonUp="addTrackBtn_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource addFileIcon}" Height="64" Width="64" Stretch="Fill"/>
                            <TextBlock Text="Add Track..." VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border x:Name="addDirBtn" Style="{StaticResource InteractiveBorder}" Width="200" Height="80" Margin="10,10,32,10" CornerRadius="8" MouseLeftButtonUp="addDirBtn_MouseLeftButtonUp">
                        <StackPanel Orientation="Horizontal">
