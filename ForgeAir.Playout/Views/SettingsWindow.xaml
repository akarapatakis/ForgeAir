                        </StackPanel>
                    </Border>
                    <Border x:Name="addRebrodBtn" Style="{StaticResource InteractiveBorder}" Width="200" Height="80" Margin="10,10,32,10" CornerRadius="8" MouseLeftButtonUp="addRebrodBtn_MouseLeftButtonUp">
