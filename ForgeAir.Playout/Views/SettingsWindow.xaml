                    </Border>
                    <Border x:Name="addCatBtn" Style="{StaticResource InteractiveBorder}" CornerRadius="8" Width="200" Height="80" Margin="10,10,32,10" MouseLeftButtonUp="addCatBtn_MouseLeftButtonUp">
