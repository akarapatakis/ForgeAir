                    <Border x:Name="tracksManagerBtn" Style="{StaticResource InteractiveBorder}" CornerRadius="8" Width="200" Height="80" Margin="10,10,32,10" MouseLeftButtonUp="tracksManagerBtn_MouseLeftButtonUp">
