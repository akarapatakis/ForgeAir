<Window x:Class="ForgeAir.Playout.SplashScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForgeAir.Playout"
      mc:Ignorable="d" 
      Height="240" Width="600"
      WindowStartupLocation="CenterScreen"
ResizeMode="NoResize" Topmost="True"
 WindowStyle="None"
        
      Cursor="Wait"
      Title="ForgeAir Radio Automation Software">
    <Window.Background>
        <ImageBrush ImageSource="{StaticResource splashScreenBackground}"/>
    </Window.Background>

    <StackPanel>
        <TextBlock Text="ForgeAir Radio Automation Software" FontSize="34" TextAlignment="Center" FontWeight="SemiBold" Foreground="White"/>
        <TextBlock Text="This is a pre-release version. DO NOT DISTRIBUTE!" FontSize="14" TextAlignment="Center" FontWeight="SemiBold" Foreground="White"/>
        <TextBlock Text="v.1.0b.2000" FontSize="11" TextAlignment="Center" FontWeight="SemiBold" Foreground="White"/>

    </StackPanel>
</Window>
