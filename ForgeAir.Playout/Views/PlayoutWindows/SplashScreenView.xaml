<Window
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
      xmlns:local="clr-namespace:ForgeAir.Playout"
      xmlns:cal="http://www.caliburnproject.org" x:Class="ForgeAir.Playout.SplashScreen"
      mc:Ignorable="d" 
      Height="200" Width="600"
      WindowStartupLocation="CenterScreen"
ResizeMode="NoResize" Topmost="True"
 WindowStyle="None"
      Cursor="Wait"
      Title="ForgeAir Radio Automation Software">
    <Window.Background>
        <ImageBrush ImageSource="/Views/PlayoutWindows/splashscreen.png"/>
    </Window.Background>

    <Grid>
        <StackPanel>
            <TextBlock Text="ForgeAir Radio Automation Software" FontSize="34" TextAlignment="Center" FontWeight="SemiBold" Foreground="White"/>
            <TextBlock Text="This is a pre-release version. DO NOT DISTRIBUTE!" FontSize="14" TextAlignment="Center" FontWeight="SemiBold" Foreground="White"/>
            <TextBlock Text="v.1.0b.1000" FontSize="11" TextAlignment="Center" FontWeight="SemiBold" Foreground="White"/>

        </StackPanel>
        <mah:MetroProgressBar IsIndeterminate="True"  Height="10" VerticalAlignment="Bottom" />

    </Grid>

</Window>
