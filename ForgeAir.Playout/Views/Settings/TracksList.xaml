<hc:Window x:Class="ForgeAir.Playout.Views.TracksList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForgeAir.Playout.Views"
        mc:Ignorable="d"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="Track Library" Height="618" Width="1359">
    <GroupBox Header="Track Library Managment">
        <ListView x:Name="listView" HorizontalAlignment="Stretch"  VirtualizingStackPanel.IsVirtualizing="True" VerticalAlignment="Stretch" MouseDoubleClick="listView_MouseDoubleClick" PreviewMouseRightButtonUp="listView_MouseRightButtonUp">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="400"/>
                    <GridViewColumn Header="Artists" DisplayMemberBinding="{Binding DisplayArtists}" Width="300"/>
                    <GridViewColumn Header="Album" DisplayMemberBinding="{Binding Album}" Width="200"/>
                    <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding DisplayDuration}" Width="100"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding TrackType}" Width="100"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding TrackStatus}" Width="100"/>
                    <GridViewColumn Header="ISRC" DisplayMemberBinding="{Binding ISRC}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

    </GroupBox>
</hc:Window>
