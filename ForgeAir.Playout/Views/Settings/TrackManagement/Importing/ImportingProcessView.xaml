<mah:MetroWindow x:Class="ForgeAir.Playout.Views.Settings.TrackManagement.Importing.ImportingProcessView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:ForgeAir.Playout.Views.Settings.TrackManagement.Importing"
        mc:Ignorable="d"
        Title="Importing Tracks" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="669*"/>
            <ColumnDefinition Width="131*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="listView"  VirtualizingStackPanel.IsVirtualizing="True" Margin="0,0,0,4" ItemsSource="{Binding Imports}" Grid.ColumnSpan="2" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Import Status" DisplayMemberBinding="{Binding ImportStatus}" Width="200"/>
                    <GridViewColumn Header="FilePath" DisplayMemberBinding="{Binding Title}" Width="400"/>
                    <GridViewColumn Header="Error(s)" DisplayMemberBinding="{Binding ImportErrors}" Width="400"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Done" x:Name="Done" Margin="9,5,10,5" Grid.Row="1" IsEnabled="{Binding ImportFinished}" Grid.Column="1"/>
    </Grid>
</mah:MetroWindow>
