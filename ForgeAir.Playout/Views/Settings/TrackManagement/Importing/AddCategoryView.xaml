<mah:MetroWindow x:Class="ForgeAir.Playout.Views.Settings.TrackManagement.Importing.AddCategoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"

        xmlns:local="clr-namespace:ForgeAir.Playout.Views.Settings.TrackManagement.Importing"
           xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Add Category" Height="450" Width="511">
    <Grid>
        <hc:Watermark Mark="ForgeAir" FontSize="32" FontWeight="UltraLight" Opacity="0.5"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="365*"/>
                <RowDefinition Height="69*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="232*"/>
                <ColumnDefinition Width="279*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="CategoryName" Margin="10,81,14,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
            <TextBox x:Name="CategoryDescription" Margin="10,151,14,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
            <hc:ColorPicker x:Name="CategoryColor" SelectedBrush="{Binding Path=CategoryColor, Mode=TwoWay}" VerticalAlignment="Top" Height="292" Grid.Column="1" Margin="25,71,25,0"/>
            <Button x:Name="Add" Content="Add" IsDefault="True" HorizontalAlignment="Right" Width="100"  VerticalAlignment="Bottom"  Margin="0,0,105,0" Grid.Column="1" Grid.Row="1"/>
            <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Right" Width="100" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1" />

            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,130,0,0" TextWrapping="Wrap" Text="Category Description" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="10,60,0,0" TextWrapping="Wrap" Text="Category Name" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock_Copy1" Margin="25,52,174,0" Width="250" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="Category Color" VerticalAlignment="Top" Grid.Column="1"/>

        </Grid>

    </Grid>
</mah:MetroWindow>
