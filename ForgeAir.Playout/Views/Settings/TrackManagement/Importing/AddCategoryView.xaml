<hc:Window x:Class="ForgeAir.Playout.Views.AddCategoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForgeAir.Playout.Views"
           xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Add Category" Height="450" Width="511">
    <Grid>
        <hc:Watermark Mark="ForgeAir" FontSize="32" FontWeight="UltraLight" Opacity="0.5"/>
        <GroupBox x:Name="groupBox" Header="Add Category...">
            <Grid>
                <hc:Watermark Mark="ForgeAir" FontSize="32" FontWeight="UltraLight" Opacity="0.5"/>
                <hc:TextBox x:Name="titleBox" HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="208"/>
                <hc:TextBox x:Name="descriptionBox" HorizontalAlignment="Left" Margin="10,151,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="208"/>
                <hc:ColorPicker x:Name="colorPicker" HorizontalAlignment="Left" Margin="243,0,0,0" VerticalAlignment="Center" Height="292" Width="258"/>
                <hc:ButtonGroup Margin="0,0,19,10" Style="{StaticResource ButtonGroupSolid}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="230">
                    <Button x:Name="Add" Content="Add" IsDefault="True" Style="{StaticResource ButtonDefault}" HorizontalAlignment="Right" Width="100"/>
                    <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Right" Width="100"/>
                </hc:ButtonGroup>
                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,130,0,0" TextWrapping="Wrap" Text="Category Description" VerticalAlignment="Top"/>
                <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="10,60,0,0" TextWrapping="Wrap" Text="Category Name" VerticalAlignment="Top"/>
                <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="243,28,0,0" TextWrapping="Wrap" Text="Category Color" VerticalAlignment="Top"/>

            </Grid>
            
        </GroupBox>
    </Grid>
</hc:Window>
