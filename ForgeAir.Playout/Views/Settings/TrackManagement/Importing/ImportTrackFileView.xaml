<hc:GlowWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForgeAir.Playout.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="ForgeAir.Playout.Views.ImportTrackFileView"
        mc:Ignorable="d"
        Title="Import Track" Height="450" Width="800" hc:Theme.Skin="Default" >

    <Grid>

        <GroupBox x:Name="groupBox" Header="Add Track File...">
            <Grid>
                <hc:Watermark Mark="ForgeAir" FontSize="32" FontWeight="UltraLight" Opacity="0.5"/>
                <hc:TextBox x:Name="FileBox" Margin="10,58,105,0" TextWrapping="Wrap" IsReadOnly="True" Height="24" VerticalAlignment="Top"/>
                <hc:NumericUpDown x:Name="CrossFadeUpDown" HorizontalAlignment="Left" Margin="10,181,0,0" Height="28" VerticalAlignment="Top"/>

                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,160,0,0" TextWrapping="Wrap" Text="Crossfade Seconds" VerticalAlignment="Top"/>
                <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="10,37,0,0" TextWrapping="Wrap" Text="Filepath..." VerticalAlignment="Top"/>
                <hc:ButtonGroup Margin="0,0,19,10" Style="{StaticResource ButtonGroupSolid}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="230">
                    <Button x:Name="Add" Content="Add" IsDefault="True" Style="{StaticResource ButtonDefault}" HorizontalAlignment="Right" Width="100"/>
                    <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Right" Width="100"/>
                </hc:ButtonGroup>
                <Button x:Name="FileSelect" Content="Select..." HorizontalAlignment="Right" Margin="0,58,15,0" VerticalAlignment="Top" Width="85"/>

                <RadioButton x:Name="SongRadioButton" Content="Song" HorizontalAlignment="Left" Margin="10,0,0,127" VerticalAlignment="Bottom"/>
                <RadioButton x:Name="JingleRadioButton" Content="Jingle" HorizontalAlignment="Left" Margin="10,0,0,106" VerticalAlignment="Bottom" Height="16"/>
                <RadioButton x:Name="SweeperRadioButton" Content="Sweeper" HorizontalAlignment="Left" Margin="10,0,0,85" VerticalAlignment="Bottom"/>
                <RadioButton x:Name="OthertrackRadioButton" Content="Other" HorizontalAlignment="Left" Margin="10,0,0,64" VerticalAlignment="Bottom"/>
                <RadioButton x:Name="VoicetrackRadioButton" Content="Voice Track" HorizontalAlignment="Left" Margin="114,0,0,127" VerticalAlignment="Bottom"/>
                <RadioButton x:Name="CommercialRadioButton" Content="Commercial" HorizontalAlignment="Left" Margin="114,0,0,106" VerticalAlignment="Bottom"/>
            </Grid>

        </GroupBox>


    </Grid>

</hc:GlowWindow>
