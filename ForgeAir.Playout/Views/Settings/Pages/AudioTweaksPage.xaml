<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForgeAir.Playout.Views.Settings.Pages"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:Syncfusion="http://schemas.syncfusion.com/wpf" x:Class="ForgeAir.Playout.Views.Settings.Pages.AudioTweaksPage"
      mc:Ignorable="d" 
      d:DesignHeight="368" d:DesignWidth="588"
      Title="AudioTweaksPage">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="287*"/>

        </Grid.RowDefinitions>

        <Grid Margin="0,2,0,0">
            <Image x:Name="image" Source="{StaticResource amstereoLogo}" Height="22" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100"/>

        </Grid>

        <hc:SimpleStackPanel Margin="0,44,0,0" Grid.RowSpan="3">
            <TextBlock x:Name="textBlock" Margin="10,5,4,0" TextWrapping="NoWrap" Text="Optimize Main Output for:" VerticalAlignment="Top" Foreground="White" FontSize="22"/>
            <RadioButton x:Name="untouchedRadio" Content="Untouched (Original Source)" HorizontalAlignment="Stretch" Margin="10,30,406,0" VerticalAlignment="Top" Grid.RowSpan="2" Checked="radioButton_Checked"/>
            <RadioButton x:Name="amRadio" Content="AM (Mono)" HorizontalAlignment="Stretch" Margin="10,5,495,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="cquamRadio" Content="AM Stereo C-QUAM" HorizontalAlignment="Stretch" Margin="10,5,449,0" VerticalAlignment="Top"/>
            <RadioButton x:Name="fmRadio" Content="FM Stereo" HorizontalAlignment="Stretch" Margin="10,5,502,0" VerticalAlignment="Top"/>

        </hc:SimpleStackPanel>
        <Grid Margin="0,44,0,0" Grid.RowSpan="3">
            <Button x:Name="button" Content="Apply"  Margin="0,0,10,10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="78" Click="button_Click"/>
        </Grid>

    </Grid>


</Page>
