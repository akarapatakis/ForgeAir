<mah:MetroWindow
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:hc="https://handyorg.github.io/handycontrol"
          xmlns:cal="http://caliburnmicro.com"
          xmlns:usercontrols="clr-namespace:ForgeAir.UI.Core.Controls;assembly=ForgeAir.UI.Core"
                        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                   xmlns:local="clr-namespace:ForgeAir.Playout"
          xmlns:UserControls="clr-namespace:ForgeAir.UI.Core.UserControls;assembly=ForgeAir.UI.Core" x:Class="ForgeAir.Playout.Views.ShellView"
          mc:Ignorable="d"
          Title="ForgeAir" Width="1366" Height="768" WindowTransitionsEnabled="True" ResizeMode="CanResize" Visibility="{Binding State}" Closing="MetroWindow_Closing" >
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <Image Source="pack://application:,,,/Assets/Ico/metro.ico"/>
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="251*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Station name -->
                <RowDefinition Height="Auto"/>
                <!-- Date -->
                <RowDefinition Height="Auto"/>
                <!-- Clock -->
            </Grid.RowDefinitions>

            <TextBlock x:Name="CurrentTime" Text="{Binding CurrentTime}" 
               FontSize="25" 
               FontWeight="Bold" 
               TextAlignment="Center" 
               Grid.Row="1"/>
            <StackPanel Orientation="Horizontal"        HorizontalAlignment="Center"        Margin="0,0,0,5" Grid.Row="2">
                <TextBlock Text="{Binding CurrentDate}" TextAlignment="Center"/>
                <TextBlock Text=" - " TextAlignment="Center" />
                <TextBlock Text="{Binding CurrentTemp}" TextAlignment="Center"/>
            </StackPanel>


        </Grid>
        <mah:MetroTabControl ItemsSource="{Binding Items}"
          SelectedItem="{Binding ActiveItem}" Margin="0,2,0,0" Grid.Row="1">
            <mah:MetroTabControl.ItemContainerStyle>
                <Style TargetType="{x:Type mah:MetroTabItem}">
                    <Setter Property="CloseButtonEnabled" Value="{Binding Closeable}" />
                    <Setter Property="CloseTabCommand" Value="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType={x:Type mah:MetroTabControl}}}" />
                    <Setter Property="CloseTabCommandParameter" Value="{Binding}" />
                </Style>
            </mah:MetroTabControl.ItemContainerStyle>
            <mah:MetroTabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </mah:MetroTabControl.ItemTemplate>

            <mah:MetroTabControl.ContentTemplate>
                <DataTemplate>

                    <mah:TransitioningContentControl Transition="RightReplace"
                                         cal:View.Model="{Binding}" />
                </DataTemplate>
            </mah:MetroTabControl.ContentTemplate>
        </mah:MetroTabControl>
    </Grid>

</mah:MetroWindow>
