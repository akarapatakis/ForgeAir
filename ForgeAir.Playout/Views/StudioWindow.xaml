<hc:Window  x:Class="ForgeAir.Playout.Views.StudioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForgeAir.Playout.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:UserControls="clr-namespace:ForgeAir.Playout.UserControls"
        mc:Ignorable="d" hc:Theme.Skin="Dark"
    WindowStartupLocation="CenterScreen"
        Title="ForgeAir" Height="852" Width="1600" Loaded="Window_Loaded" Closing="Window_Closing" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="133*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="363*"/>
            <RowDefinition Height="288*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="0*"/>

        </Grid.ColumnDefinitions>

        <hc:Watermark Mark="ForgeAir" FontSize="32" FontWeight="UltraLight" Opacity="0.5" Grid.ColumnSpan="6" Grid.RowSpan="4"/>

        <UserControls:NowPlayingControl 
Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="7" 
    VerticalAlignment="Stretch"
    HorizontalAlignment="Stretch"
Margin="0,0,186,0"/>

        <DockPanel Grid.Column="4" LastChildFill="False"     VerticalAlignment="Stretch"     Grid.ColumnSpan="2">
            <UserControls:ClockControl DockPanel.Dock="Right" Width="185"/>
        </DockPanel>


        <Button x:Name="button2" Content="Pause" VerticalAlignment="Stretch" Width="136" Margin="1,33,0,354" Click="button2_Click" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
        <Button x:Name="button2_Copy" Content="Stop" VerticalAlignment="Stretch" Width="136" Margin="424,33,0,354" Click="button2_Copy_Click" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
        <Button x:Name="button3" Content="Play/Skip" HorizontalAlignment="Left" Margin="142,33,0,354" VerticalAlignment="Stretch" Width="136" Click="button3_Click" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
        <Button x:Name="settingsbtn" Content="Settings" Margin="283,33,0,354" VerticalAlignment="Stretch" Width="136" Click="settingsbtn_Click" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>

        <hc:TabControl IsAnimationEnabled="True" Grid.ColumnSpan="3" Margin="6,17,0,21" ShowCloseButton="False" IsDraggable="True" IsTabFillEnabled="True" Grid.Column="3" Grid.RowSpan="3" Grid.Row="1">
            <hc:TabItem Header="Track Browser">
                <UserControls:TrackSelectorControl Loaded="TrackSelectorControl_Loaded" />
            </hc:TabItem>
            <hc:TabItem Header="FX">
                <UserControls:FXSelectorControl />
            </hc:TabItem>
            <hc:TabItem Header="Overview">
                <hc:SimplePanel Background="#FFE83F6D"/>
            </hc:TabItem>
        </hc:TabControl>

        <UserControls:PlaybackQueue Grid.Column="0" Margin="4,7,3,6" hc:ScrollViewerAttach.Orientation="Vertical" Grid.ColumnSpan="3" Grid.Row="2"/>
        <UserControls:SweeperHookBoxControl Grid.Column="1" Margin="1,33,10,21" Grid.Row="3" Grid.ColumnSpan="2"/>

    </Grid>
</hc:Window>
