<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:ForgeAir.Playout.UserControls.Views"
             xmlns:UserControls="clr-namespace:ForgeAir.UI.Core.UserControls;assembly=ForgeAir.UI.Core" x:Class="ForgeAir.Playout.UserControls.Views.TrackSelectorView"
             mc:Ignorable="d" 
            MouseDoubleClick="UserControl_MouseDoubleClick" MinHeight="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchBox" Margin="10,28,186,28"  Grid.Row="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" mah:TextBoxHelper.ClearTextButton="True" mah:TextBoxHelper.IsMonitoring="True" mah:TextBoxHelper.IsWaitingForData="True" mah:TextBoxHelper.Watermark="Search"/>
        <ListView x:Name="Tracks"
          Grid.Row="1"
          ItemsSource="{Binding FilteredTracks}"
          VirtualizingStackPanel.IsVirtualizing="True"
          VirtualizingStackPanel.VirtualizationMode="Standard"
                  
          ScrollViewer.IsDeferredScrollingEnabled="True"
          SelectedItem="{Binding SelectedTrack}"
          PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
          MouseMove="ListView_MouseMove"
          ScrollViewer.CanContentScroll="True">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" Handler="TrackItem_DoubleClick" />
                    <Setter Property="Background" Value="{Binding Background}"/>
                    <Setter Property="Foreground" Value="{Binding Foreground}" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                    <GridViewColumn Header="Artists" DisplayMemberBinding="{Binding DisplayArtists}" Width="200"/>
                    <GridViewColumn Header="Album" DisplayMemberBinding="{Binding Album}" Width="200"/>
                    <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding DisplayDuration}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <ComboBox x:Name="TrackTypeList" Grid.Row="0" HorizontalAlignment="Right"
          Margin="10,28,10,28"
          ItemsSource="{Binding ComboItems}" SelectedItem="{Binding SelectedTrackType}"/>

    </Grid>
</UserControl>
