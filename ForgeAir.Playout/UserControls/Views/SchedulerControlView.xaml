<UserControl x:Class="ForgeAir.Playout.UserControls.Views.SchedulerControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForgeAir.Playout.UserControls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Date Selector -->
        <DatePicker SelectedDate="{Binding SelectedDate}" Margin="5"/>

        <!-- Time Slots and Appointments -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding DayAppointments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="1" Margin="2" Padding="4" Background="#DFF">
                            <StackPanel>
                                <TextBlock Text="{Binding Subject}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Start, StringFormat=t}"/>
                                <TextBlock Text="{Binding End, StringFormat=t}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>

</UserControl>
