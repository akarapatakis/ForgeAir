<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForgeAir.Playout.UserControls.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="ForgeAir.Playout.UserControls.Views.OnAirView"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="620" MinWidth="620">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="378*"/>
        </Grid.RowDefinitions>
        <Image x:Name="image" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"/>
        <TextBlock x:Name="textBlock" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" FontSize="22" Height="30" Width="159"/>
        <TextBlock x:Name="textBlock1" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Height="15" Width="62"/>
        <TextBlock x:Name="textBlock1_Copy" Grid.Column="2" HorizontalAlignment="Left" Margin="52,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Height="15" Width="62"/>
        <TextBlock x:Name="textBlock_Copy" Grid.Column="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" FontSize="22" Height="30" Width="159"/>
        <TextBlock x:Name="textBlock_Copy1" Grid.Column="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" FontSize="22" Height="30" Width="158" Grid.Row="2"/>
        <TextBlock x:Name="textBlock_Copy2" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" FontSize="22" Height="30" Width="159" Grid.Row="2"/>

        <mah:Tile x:Name="tile" Content="Tile" HorizontalAlignment="Center" Margin="0,38,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <mah:Tile x:Name="tile_Copy" Content="Tile" HorizontalAlignment="Left" Margin="10,38,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.Column="1"/>
        <mah:Tile x:Name="tile_Copy1" Content="Tile" HorizontalAlignment="Left" Margin="161,38,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.Column="1" Grid.ColumnSpan="2"/>
        <mah:Tile x:Name="tile_Copy2" Content="Tile" HorizontalAlignment="Left" Margin="30,38,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.Column="2"/>

    </Grid>
</UserControl>
