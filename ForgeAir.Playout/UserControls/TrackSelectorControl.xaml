<UserControl x:Class="ForgeAir.Playout.UserControls.TrackSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:ForgeAir.Playout.UserControls"
             mc:Ignorable="d" 
            MouseDoubleClick="UserControl_MouseDoubleClick">
    <ListView x:Name="listView" VirtualizingStackPanel.IsVirtualizing="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <ListView.View>
            <GridView>

                <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                <GridViewColumn Header="Artists" DisplayMemberBinding="{Binding DisplayArtists}" Width="200"/>
                <GridViewColumn Header="Album" DisplayMemberBinding="{Binding Album}" Width="200"/>
                <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding DisplayDuration}" Width="100"/>

                

            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
