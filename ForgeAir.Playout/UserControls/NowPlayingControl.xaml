<UserControl x:Class="ForgeAir.Playout.UserControls.NowPlayingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:ForgeAir.Playout.UserControls"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            
            <!-- For Image -->
            <ColumnDefinition Width="199*"/>


            <!-- For Text -->
        </Grid.ColumnDefinitions>

        <Image x:Name="trackImage" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <StackPanel Grid.Column="1" Margin="10,0,10,0" Grid.RowSpan="2">
            <TextBlock x:Name="titleLabel" TextWrapping="Wrap" Text="" FontSize="26" FontWeight="Bold"/>
            <TextBlock x:Name="artistLabel" TextWrapping="Wrap" Text="" FontSize="18"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="10,0,10,0" Grid.RowSpan="2">
            <TextBlock x:Name="elapsedLabel" TextWrapping="Wrap" Text="00:00" FontSize="18" FontWeight="Light" TextAlignment="Right" Visibility="Hidden"/>
            <TextBlock x:Name="durationLabel" TextWrapping="Wrap" Text="00:00" FontSize="18" FontWeight="SemiBold" TextAlignment="Right" Visibility="Hidden"/>
            <Slider x:Name="trackslider"
        Margin="0,15,0,0" 
                    Visibility="Hidden"
HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
        Height="20" ValueChanged="trackslider_ValueChanged" MouseDown="trackslider_MouseDown" PreviewMouseDoubleClick="trackslider_PreviewMouseDoubleClick" PreviewMouseDown="trackslider_PreviewMouseDown" PreviewMouseUp="trackslider_PreviewMouseUp"/>
            <TextBlock x:Name="trackTypeLabel" Margin="10,0,10,0" TextWrapping="Wrap" Text="add track type here 🙋‍♂️" FontSize="10" FontWeight="Light"/>
        </StackPanel>

       

    </Grid>
</UserControl>
